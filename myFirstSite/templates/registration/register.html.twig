{% extends 'main/base.html.twig' %}
{% block title %}Регистрация{% endblock %}
{% block body %}
	{# <div>{{ message }}</div> #}

		<div class="container-form">
			<div class="form-login-register shadow-lg">
				{% for flashError in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flashError }}</div>
				{% endfor %}
				<h3 class="mb-3 font-weight-normal title-form-login-register">Регистрация</h3>

				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.email, {
					label: 'Email:'
				}) }}
				{{ form_row(registrationForm.plainPassword.first, {
            		label: 'Пароль:'
        		}) }}
				{{ form_row(registrationForm.plainPassword.second, {
            		label: 'Повтор пароля:'
        		}) }}
				
				{{ form_row(registrationForm.agreeTerms) }}
				{# {{ form_label(registrationForm.agreeTerms, 'opachke') }} #}
				
				 
			
				{# <div class="form-group">
					<div class="form-check">        
						<input type="checkbox" id="registration_form_agreeTerms" name="registration_form[agreeTerms]" required="required" class="form-check-input" value="1">
        				<a href="{{ path('user_agreement') }}">
							<label class="form-check-label required" for="registration_form_agreeTerms">Соглашение с правилами сайта</label>
						</a>
					</div>
				</div> #}

				<button type="submit" class="btn btn-success btn-login-register">Продолжить</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
		
{% endblock %}
