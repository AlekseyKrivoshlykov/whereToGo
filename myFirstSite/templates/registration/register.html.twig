{% extends 'main/base.html.twig' %}
{% block title %}Регистрация
{% endblock %}
{% block body %}
	{# <div>{{ message }}</div> #}
	<div class="container-form">
		<div class="form-login-register shadow-lg">
			{% for flashError in app.flashes('verify_email_error') %}
				<div class="alert alert-danger" role="alert">{{ flashError }}</div>
			{% endfor %}
			<h3 class="mb-3 font-weight-normal title-form-login-register">Регистрация</h3>

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email, {
					label: 'Email:'
				}) }}
			{{ form_row(registrationForm.plainPassword.first, {
            		label: 'Пароль:'
        		}) }}
			{{ form_row(registrationForm.plainPassword.second, {
            		label: 'Повтор пароля:'
        		}) }}
			<div class="form-group">
				<div class="form-check">
					<input type="checkbox" id="registration_form_agreeTerms" name="registration_form[agreeTerms]" required="required" class="form-check-input" value="1">
					<label class="form-check-label required" for="registration_form_agreeTerms">
						<a href="{{ path('user_agreement') }}" target="_blank" class="link-name">Соглашение с правилами сайта</a>
					</label>
				</div>
			</div>
			<button type="submit" class="btn btn-success btn-login-register">Продолжить</button>

			<div style="display:none;">{{ form_row(registrationForm.agreeTerms) }}</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>

{% endblock %}
