{% extends 'main/base.html.twig' %}
{% block title %}Вулканы{% endblock %}
{% block body %}
	<div class="container-fluid">
		<div class="row no-gutters justify-content-center mt-5">
			<div class="col-12 col-lg-6 col-md-6">
				<h1 class="display-4 text-center">
					{{ title }}
				</h1>
			</div>
		</div>
	</div>
	{# <ul class="list-group"> #}
	<div class="container">
		<div class="row no-gutters justify-content-center mt-5">
			{% for volcano in volcanoes %}
				{# <li class="list-group-item"> #}
				<div class="col">
					<div class="card border-dark mb-3" style="width: 18rem;">
						<a href="{{ path('volcanoes_id', {'id': volcano.getId }) }}" class="link place_link">
							<img src="{{ asset('assets/main/images/Volcanoes/')}}{{ volcano.getMainPhoto }}" class="card-img-top" alt="volcano" width="100%" height="200">
							<div class="card-body text-dark">
								<h5 class="card-title">{{ volcano.title}}</h5>
							</div>
						</a>
					</div>
				</div>
				{# </li> #}
			{% endfor %}
		</div>
		{# </ul> #}
	</div>
{% endblock %}
