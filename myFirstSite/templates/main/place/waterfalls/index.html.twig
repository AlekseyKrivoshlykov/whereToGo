{% extends 'main/base.html.twig' %}
{% block title %}Водопады Камчатки{% endblock %}
{% block body %}
	<div class="container-fluid">
		<div class="row no-gutters justify-content-center mt-5">
			<div class="col-12 col-lg-6 col-md-6">
				<h1 class="text-center title-page">
					{{ title }}
				</h1>
			</div>
		</div>
	</div>
	{# <ul class="list-group"> #}
	<div class="container-fluid">
		<div class="row no-gutters mt-5">
			{% for waterfall in waterfalls %}
				{# <li class="list-group-item"> #}
				<div class="col place-card-wrapper">
					<div class="card border-dark mb-3">
						<a href="{{ path('waterfalls_id', {'id': waterfall.getId }) }}" class="link place_link">
							<img src="{{ asset('assets/main/images/Waterfalls/')}}{{ waterfall.getMainPhoto }}" class="card-img-top" alt="waterfall">
							<div class="card-body text-dark">
								<h5 class="card-title">{{ waterfall.title}}</h5>
							</div>
						</a>
					</div>
				</div>
				{# </li> #}
			{% endfor %}
		</div>
		{# </ul> #}
	</div>
{% endblock %}
