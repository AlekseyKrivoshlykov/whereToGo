{% extends 'main/base.html.twig' %}
{% block title %} {{ place.title }} | Kamplaces - Природные места Камчатки для отдыха {% endblock %}

{% block head %} 
<meta name="description" content="{{ place.title }} на Kamplaces."/>
{% endblock %}

{% block body %}
	<h1 class="h3 row justify-content-center text-align-center mt-5 mb-5 title-page">{{ place.title }}</h1>
	{% if images | length > 0 %}
		<div class="map-slider-container">
			<div class="row no-gutters justify-content-center mb-5">
				<div class="col-12 col-lg-8 col-md-12">
					<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
						<div class="carousel-inner">
							<div class="carousel-item active">
								<a href="{{ asset('assets/main/images/HotSprings/'~ place.getId ~ '') }}/{{ images[0].getSrc }}" target="_blank"><img src="{{ asset('assets/main/images/HotSprings/'~ place.getId ~ '') }}/{{ images[0].getSrc }}" class="d-block" alt="hotspring"></a>
							</div>
							{% for img in images %}
								{% if img.getSrc not in images[0].getSrc %}
									<div class="carousel-item">
										<a href="{{ asset('assets/main/images/HotSprings/'~ place.getId ~ '') }}/{{ img.getSrc }}" target="_blank"><img src="{{ asset('assets/main/images/HotSprings/'~ place.getId ~ '') }}/{{ img.getSrc }}" class="d-block" alt="hotspring"></a>
									</div>
								{% endif %}
							{% endfor %}
						</div>
						<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Next</span>
						</button>
					</div>
				</div>
			</div>
		</div>
	{% endif %}

	{% if place.getHowToGet is not null %}
		<div class="row no-gutters justify-content-center mb-5 description-wrap">
			<div class="col content-text">
				<h2 class="description-title mb-3">
					Как добраться?
				</h2>
				{{ place.getHowToGet }}
			</div>
		</div>
	{% endif %}

	{% if place.getLatitude and place.getLongitude is not null %}
		<div class="map-slider-container">
			<div class="row no-gutters justify-content-center mb-5">
				<div class="col-12 col-lg-8 col-md-12">
					<div id="map"></div>
				</div>
			</div>
		</div>
	{% endif %}

	{% if place.getContentSource is not null %}
		<div class="row justify-content-center title-page content-source">
			Источник фото:
			{{ place.getContentSource }}
		</div>
	{% endif %}

	<section class="comment-block">
		<div class="comment-wrapper">
			<div class="commentaries">
				<h3 class="title-comment-section">
					Отзывы посетителей
				</h3>
				{% if comments is empty %}
					<div class="comment-item mb-3">
						Да, отзывов пока нет.
					</div>
				{% endif %}
					{% for comment in comments %}
					<div class="comment-item mb-3">
						<div class="comment-user-wrapper mb-2">
							<div class="comment-user-data">
								{{ comment.getUserName }}
								{{ comment.getCreateAt | date('d.m.y H:i')}}
							</div>
								
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							{% if app.user.id is same as (comment.getUser.getId) %}
							<div class="comment-btn-panel">
								<a href="{{ path('comment_edit', {'id': comment.getId }) }}" class="btn comment-btn-edit">
									<i class="fas fa-pen"></i>
								</a>

								<form method="post" action="{{ path('comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Вы действительно хотите удалить комментарий?');">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
									<button class="btn comment-btn-delete">
										<i class="fas fa-trash"></i>
									</button>
								</form>
							</div>
							{% endif %}
							{% endif %}
						</div>
						<div class="comment-content">
							{{ comment.content }}
						</div>
					</div>
				{% endfor %}
				<div class="comment-pagination mb-3">
					{% if previous >= 0 %}
						<a href="{{ path('hot_springs_id', { id: place.id, offset: previous }) }}" class="pagination-left-arrow">

							<i class="fas fa-chevron-left"></i>
						</a>
					{% endif %}
					{% if next < comments|length %}
						<a href="{{ path('hot_springs_id', { id: place.id, offset: next }) }}">
							<i class="fas fa-chevron-right"></i>
						</a>
					{% endif %}
				</div>
			</div>

			<div class="comment-form">
				<h3 class="title-comment-section">
					Оставить комментарий
				</h3>
				{% for message in app.flashes('danger') %}
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						{{ message }}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{% endfor %}
				{{ form_start(form) }}
				{{ form_row(form.user_name) }}
				{{ form_row(form.content) }}
				{{ form_end(form) }}
			</div>
		</div>
	</section>
{% endblock %}

{% block javascript %}
	<script type="text/javascript">
		ymaps.ready(init);
		function init() {
			var myMap = new ymaps.Map("map", {
			center: [
				{{ place.getLatitude }}, {{ place.getLongitude }}
			],
			zoom: 9
			});

		var myGeoObject = new ymaps.GeoObject({
			geometry: {
				type: "Point",
				coordinates: [{{ place.getLatitude }}, {{ place.getLongitude }}]
			},
			properties: {
				hintContent: [
					'Широта: ' + {{ place.getLatitude }},
					' долгота: ' + {{ place.getLongitude }}
				]
			}
		});

		myMap.geoObjects.add(myGeoObject);

		}
	</script>
		<script src="{{ asset('assets/main/js/saveScrollScript.js')}}"></script>
{% endblock %}



