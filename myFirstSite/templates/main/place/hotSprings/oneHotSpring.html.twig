	<div class="row justify-content-center text-align-center mt-5 mb-5">
	{{ place.title }}
	</div>
	{% if images | length > 0 %}
			<div class="row no-gutters justify-content-center">
				<div class="col-12 col-lg-8 col-md-12">

					<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
						<div class="carousel-inner">
							<div class="carousel-item active">
								<img src="{{ asset('assets/main/images/HotSprings/'~ place.getId ~ '') }}/{{ images[0].getSrc }}" class="d-block" alt="hotspring">
							</div>
							{% for img in images %}
								{% if img.getSrc not in images[0].getSrc %}
									<div class="carousel-item">
										<img src="{{ asset('assets/main/images/HotSprings/'~ place.getId ~ '') }}/{{ img.getSrc }}" class="d-block" alt="hotspring">
									</div>
								{% endif %}
							{% endfor %}
						</div>
						<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Next</span>
						</button>
					</div>
				</div>
			
		</div>
	{% endif %}
	<div class="row justify-content-center text-align-center mt-5 mb-5">
	{{ place.description }}
	</div>
	
{% endblock %}
