{% extends 'main/base.html.twig' %}
{% block title %}KamPlaces
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<div class="row no-gutters justify-content-center mt-5">
			<div class="col-12 col-lg-6 col-md-6">
				<h1 class="text-center title-page">
					{{ title }}
				</h1>
			</div>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row no-gutters justify-content-center mt-5 search-result-row">
			{% for place in places %}
				{% for category in nameCategory %}
					<div class="col-12 col-lg-6 col-md-6 content-text mb-2">
						<h4>
							<a href="{{ path('' ~ category.en_title ~ '_id', { 'id': place.id }) }}" class="link-search-result">{{ place.title }}</a>
						</h4>
					</div>
				{% endfor %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
