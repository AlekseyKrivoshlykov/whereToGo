{% extends 'main/base.html.twig' %}

{% block title %}Вход
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row no-gutters justify-content-center">
			<div class="col col-lg-6 col-md-8">
				<div class="form-login-register shadow-lg">
					<h3 class="mb-3 font-weight-normal title-form-login-register">Вход в систему</h3>
					<form method="post">
						{% if error %}
							{# {{ dump(error) }} #}
							<div class="alert-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3 content-text">
								Вы уже вошли в систему, как
								{{ app.user.username }},
								<a href="{{ path('app_logout') }}">Выйти из системы</a>
							</div>
						{% endif %}
						<div class="form-group">
							<label for="inputEmail">Email:</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						</div>
						<div class="form-group">
							<label for="inputPassword">Пароль:</label>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						</div>
						{#
																        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																        See https://symfony.com/doc/current/security/remember_me.html
																
																        <div class="checkbox mb-3">
																            <label>
																                <input type="checkbox" name="_remember_me"> Remember me
																            </label>
																        </div>
																    #}

						<button class="btn btn-success btn-login-register" type="submit">
							Войти
						</button>
					</form>

				</div>
			</div>
		</div>
	</div>

{% endblock %}
