{% extends 'admin/adminBase.html.twig' %}

{% block body %}

	<div class="container">
		<div class="row no-gutters">
			<div class="col-12">
				<h1 class="display-4 text-center mt-5">
					{{ title }}
				</h1>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row no-gutters">
			<div class="col-12">
				<a href="{{ path('admin_user_create')}}" class="btn btn-success mt-5">
					Создать пользователя
				</a>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row no-gutters">
			<div class="col-12">
				<h2>
					Список пользователей
				</h2>
				<ul>
					{% for user in users %}
						<li>
							{{ user.getEmail }},
							{{ user.getRoles | json_encode() }}
							<a href="{{ path('admin_user_update', {'userId': user.getId }) }}" class="btn btn-primary">Редактировать пользователя</a>
							
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>


{% endblock %}
